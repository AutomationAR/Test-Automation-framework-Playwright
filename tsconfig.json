{
    "compilerOptions": {
      "target": "ESNext",
      "module": "CommonJS",
      "lib": ["ESNext", "DOM"],
      "outDir": "dist",
      "rootDir": ".",
      "strict": true,
      "moduleResolution": "Node",
      "esModuleInterop": true,
      "skipLibCheck": true,
      "resolveJsonModule": true,
      "baseUrl": ".",   // ✅ REQUIRED for path aliases to work
      "paths": {
        "@data/*": ["test_data/*"]         // ✅ Now this will work relative to baseUrl
      }
    },
    "include": ["tests", "framework"],
    "exclude": ["node_modules", "dist"]
  }
  